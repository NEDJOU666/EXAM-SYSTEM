generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Univ{
id String @id @default(cuid())
name String 
domain String @unique 
students Student[]

}

model Admin{
id String @id @default(cuid())
name String
email String @unique


}

model Student{
id String @id @default(cuid())
name String
email String
univId String @unique
univ Univ @relation(fields: [univId],references: [id])

}